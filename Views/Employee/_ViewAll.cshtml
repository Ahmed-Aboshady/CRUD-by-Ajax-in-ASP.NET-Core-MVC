 
@model IEnumerable<CRUDbyAjaxinASP.NETCoreMVC.Models.employeemodel>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Salary
            </th>
            <th>
                Moblie
            </th>
            <th>
                Date
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Employee",null,Context.Request.Scheme)','New Employee')" class="btn btn-success text-white">
                    <i class="fas fa-plus"></i>
                    New Employee
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.name
                </td>
                <td>
                    @item.age
                </td>
                <td>
                    @item.salary
                </td>
                <td>
                    @item.moblie
                </td>
                <td>
                    @item.Date
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Employee",new {id=item.id },Context.Request.Scheme)','Update Employee')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i>Edit</a>
                    |
                    @*  <a asp-action="Details" asp-route-id="@item.id">Details</a> |*@
                    <form asp-action="Delete" asp-route-id="@item.id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>